<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>	

<body>
	<!-- Header -->
	<%- include('./partials/header') %>	
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form action="http://localhost:3000/bears/loginprofile" method="POST">
				<div>
					<label class="form-label" for="email">Email:</label>
					<input class="form-input" id="email" name="email" value="<%= locals.oldData && oldData.email ? oldData.email : null %>">
					<% if (locals.errors && errors.email) { %>
						<div class="error-message"> <%= errors.email.msg %></div>
					<% } %>   
				</div>
				<div>
					<label class="form-label" for="password">Password:</label>
					<input class="form-input" id="password" type="password" name="password" value="">
					<% if (locals.errors && errors.password) { %>
						<div class="error-message"><%= errors.password.msg %></div>
					   <% } %>
				</div>
				<div>
					<label class="form-label" for="recordame">Recordame</label>
					<input class="form-input-recordame" type="checkbox" id="recordarme" name="recordarme">
				</div>
	

				<button class="form-input" type="submit">Login</button>
			</form>
		</div>
	</div>
	<!-- footer -->
	<%- include('./partials/footer') %>	
	<!-- /footer -->
</body>

</html>