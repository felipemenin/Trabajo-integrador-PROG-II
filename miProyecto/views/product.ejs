<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>	
<body>
	<!-- Header -->
	<%- include('./partials/header') %>	
	<!-- /Header -->
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%- info.nombre %></h2> 
			<p class="product-detail-description">
				<a href="http://localhost:3000/mercadoLibre/productAdd">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src=<%- info.imagen %> alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%- info.descripcion %>
					</p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for(let i=0; i < info.comentarios.length; i++){ %>
							<article>
								<img src="https://via.placeholder.com/35" alt="">
								<div class="data">
									<p class="user">
									<strong> <a href="http://localhost:3000/mercadoLibre/profile/<%- info.comentarios[i].nombre_usuario%>"><%- info.comentarios[i].nombre_usuario%></a> </strong>
									<%- info.comentarios[i].comentario%>
								</p>
								</div>
							</article>
						<% } %>

					</section>
					<form class="form" action="http://localhost:3000/mercadoLibre" method="get">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer') %>	
	<!-- /footer -->

</body>	
</html>