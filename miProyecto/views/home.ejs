<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>	
<body>
	<!-- Header -->
	<%- include('./partials/header') %>	
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/peraBanner.jpg" alt="Banner de ofertas" height="350px" >
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i=0; i < info.lista.length; i++){ %>
				<%if(info.lista[i].estado === 'n'){ %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="http://localhost:3000/mercadoLibre/product/<%- info.lista[i].nombre%>">
								<figure class="product-box_image">
									<img src=<%- info.lista[i].imagen%> alt="<%- info.lista[i].nombre%>">
								</figure>
								<article class="product-box_data">
									<h2><%-info.lista[i].nombre %></h2>
								
									<p><%-info.lista[i].descripcion%></p>
									<p>Comentarios: <%- info.lista[i].comentarios.length %></p>
								</article>
							</a>
						</section>
					</div>
			<% } }%>
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i=0; i < info.lista.length; i++){ %>
				<%if(info.lista[i].estado === 'c'){ %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="http://localhost:3000/mercadoLibre/product/<%- info.lista[i].nombre%>">
								<figure class="product-box_image">
									<img src=<%- info.lista[i].imagen%> alt="<%- info.lista[i].nombre%>">
								</figure>
								<article class="product-box_data">
									<h2><%-info.lista[i].nombre %></h2>
								
									<p><%-info.lista[i].descripcion%></p>
									<p>Comentarios: <%- info.lista[i].comentarios.length %></p>
								</article>
							</a>
						</section>
					</div>
			<% } }%>
		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('./partials/footer') %>	
	<!-- /footer -->
</body>	
</html>