<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>	

<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	   <% } else { %>
	   <%- include('./partials/header') %>	
	   <% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form action="http://localhost:3000/bears/editar/<%= data.id %>" method="POST">
				<div>
					<label class="form-label" for="imagen">Imagen:</label>
					<input class="form-input" id="imagen" type="text" name="imagen", value= "<%= locals.oldData && oldData.imagen ? oldData.imagen : data.foto_producto %>">
					<% if (locals.errors && errors.imagen) { %>
						<div class="error-message"><%= errors.imagen.msg %></div>
					   <% } %>
				</div>
				<div>
					<label class="form-label" for="nombre">Nombre del producto:</label>
					<input class="form-input" id="nombre" type="text" name="nombre" value="<%= locals.oldData && oldData.nombre ? oldData.nombre : data.nombre_producto %>">
					<% if (locals.errors && errors.nombre) { %>
						<div class="error-message"><%= errors.nombre.msg %></div>
					   <% } %>
				</div>
				<label class="form-label" for="descripcion">Descripci√≥n:</label>
				<div>
					<input class="form-input" name="descripcion" id="" cols="30" rows="10" value="<%= locals.oldData && oldData.descripcion ? oldData.descripcion : data.descripcion_producto %>"></input>
					<% if (locals.errors && errors.descripcion) { %>
						<div class="error-message"><%= errors.descripcion.msg %></div>
					   <% } %>
				</div>

				<button class="form-input" type="submit">Agregar</button>
			</form>
		</div>
	</div>
		<!-- footer -->
		<%- include('./partials/footer') %>	
		<!-- /footer -->
</body>
</html>