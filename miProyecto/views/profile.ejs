<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>	
<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	   <% } else { %>
	   <%- include('./partials/header') %>	
	   <% } %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/default-user.webp" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title-profile">
						<%= info.user %>
							<% if (locals.user && locals.user.id===user.id) { %>
								<a class="profile-a"
									href="http://localhost:3000/bears/profileEdit">
									<i class="fas fa-cog"></i>
								</a>
								<% } %>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<p>
						<%= info.email %>
					</p>
				</div>
				<div>
					<ul class="">
						<li>
							<%= info.user_product.length %> producto/s
						</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<% if (producto.length != 0) { %>
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show mis productos -->
		<% for (let i = 0; i < producto.length; i++) {
			if (info.id === producto[i].usuario_id) {%>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="http://localhost:3000/bears/product/<%- producto[i].id%>">
						<figure class="product-box_image">
							<img src="/images/users/defal.png" alt=''>
						</figure>
						<article class="product-box_data">
							<h2><%= producto[i].nombre_producto %></h2>
							<p><%= producto[i].descripcion_producto %></p>
							<p><%= producto[i].coment_product.length%> comentario/s</p>
						</article>
					</a>
				</section>
			</div>
			<%} }%>
			<% } else { %>
				<div class="col-12">
				<h3 class="products-title">No hay productos cargados</h3>
			</div>
				<% } %>
		</div>
	</div>

	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer') %>	
	<!-- /footer -->
</body>	
</html>