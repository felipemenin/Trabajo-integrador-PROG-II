<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>	

<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	   <% } else { %>
	   <%- include('./partials/header') %>	
	   <% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<%  if(productos.length===0){%>
			<h2 class="produc-no-disp">No hay resultados para su criterio de busqueda</h2>
			<%} 
			else {
			 for(let i=0; i < productos.length; i++){ %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="http://localhost:3000/bears/product/<%- productos[i].id%>">
								<figure class="product-box_image">
									<img src='/images/products/<%= productos[i].foto_producto %>' alt="<%= productos[i].nombre_producto%>">
								</figure>
								<article class="product-box_data">
									<h2><%= productos[i].nombre_producto%></h2>
								
									<p><%=productos[i].descripcion_producto%></p>
									<p>Comentarios: <%=productos[i].coment_product.length%> </p>
									<a href="http://localhost:3000/bears/profile/<%= productos[i].user_product.user%>"> Cargado por: <%=productos[i].user_product.user%></a>

								</article>
							</a>
						</section>
					</div>
			<%  }}%>
		</div>
	</div>


	<!-- footer -->
	<%- include('./partials/footer') %>	
	<!-- /footer -->
</body>

</html>